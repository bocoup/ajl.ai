@import './App.styl';
@import './shared/mixins.styl';

.hompageContainer {
  border: 1px solid $gray-2;
  background-color: white;

  img {
    border-radius: 100%;
    width: 100%
  }
  figure {
    width: 14em;
    margin: 1em auto 2em auto;
  }
  h4, h5 {
    margin: 0px;
  }
}

.homeSubHeader {
  padding: 1.5em;
  border-bottom: 1px solid $gray-2;
  margin-bottom: 2em;
  position: relative;

  h1 {
    margin: 0 0 0.25em 0;
  }

  h5 {
    font-size: 1em;
    margin: 0;
  }
}

.homeSubHeader h1:after {
  content: '';
  position: absolute;
  background-color: $aqua;
  widht: 50px;
  height: 10px;
  bottom: 0;

}

section {
  padding: 0 1.5em;
  margin-bottom: 2em;

  h2 {
    margin-bottom: .25em;
  }
}

.homepageProgressBar {
  padding-bottom: 3em;
  border-bottom: 1px solid $gray-2;

  p {
    font-weight: 600;
  }
}

.homepageButton {
  button-aqua()
  display: inline-block;
}

@media only screen and (min-width: 33em) {
  .hompageContainer {
    figure {
      width: 18%;
      margin: 1em 1% 3em 1%;
      display: inline-block;
    }
  }

  .homeSubHeader {
    padding: 2em;
  }

  section {
    padding: 0 2em;
  }
}

@media only screen and (min-width: 45em) {

  .homeSubHeader {
    margin-bottom: 3em;
    padding: 3em;
  }

  section {
    margin-bottom: 3em;
    padding: 0 3em;
  }
}

@media only screen and (min-width: 63em) {

  .homeSubHeader {
    margin-bottom: 4em;
    padding: 4em;
  }

  section {
    margin-bottom: 4em;
    padding: 0 4em;
  }
}
