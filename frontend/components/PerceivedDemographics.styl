@import './App.styl';
@import './shared/mixins.styl';

.imageContainer {
  position: relative;
  padding: 0.75em 0.75em 3.6em;
  border: 1px solid $gray-2;
  background-color: white;

  .progressBarContainer {
    margin-bottom: .75em;
  }
}

.questionsContainer {
  position: relative;
  margin-top: -52px;

  h4.PerceivedDemographicTitle {
    text-transform: uppercase;
    font-weight: 700;
    padding: .75em 0;
    margin: 0 0 1em;
    text-align: center;
    border-bottom: 1px solid $gray-2;
  }
}

fieldset, .reviewAnnotations {
  background: white;
  border: 1px solid $gray-2;
  padding: 0 0 .25em;
  margin: 0;

  .progressBarContainer {
    padding: 0 1em;
  }
  .demographicLabels span {
    width: 33.33%;
    text-align: center;
    display: inline-block;
  }
}

.reviewAnnotations {

  ul {
    list-style: none;
    padding: 0 1em 1em;
    margin: 0;
    line-height: 2em;
  }
}

.toggleFlag {
  position: absolute;
  right: 2em;
  background: transparent;
  border: 0;

  &:hover {
    text-decoration: underline;
  }
}

.flagButton {
  button-aqua();
  margin: .75em;
  display: block;
}

@media only screen and (min-width: 26em) {
  .flagButton {
    margin: 1.25em auto;
  }
}

@media only screen and (min-width: 63em) {
  .flagButton {
    margin: 1.5em auto;
  }
}

.prev,
.save {
  font-family: 'Open Sans', sans-serif;
  border: none;
  font-size: 1em;
  font-weight: 600;
}

.prev {
  position: absolute;
  background-color: $light-blue;
  color: $font-dark-blue;
  margin: 0;
  height: 42px;
  padding: 0 1em;

  &:hover {
    background-color: $medium-blue;
  }
}

.save {
  button-aqua()
  margin: 0 1em 1em;
}

.hidden {
  visually-hidden();
}

@media only screen and (min-width: 26em) {

  fieldset .progressBarContainer {
    padding: 0 1.5em;
  }

  .reviewAnnotations ul {
    padding: .5em 1.5em 1em 1.5em;
  }

  .save {
    margin: 0 1.5em 1.5em;
  }
}

@media only screen and (min-width: 45em) {

  .imageContainer{
    padding-bottom: .75em;
  }

  .imageContainer, .questionsContainer {
    width: 50%;
    display: inline-block;
    vertical-align: top;
  }

  .questionsContainer {
    margin-top: 0;

    form {
      margin-top: 0;
    }
  }
}

@media only screen and (min-width: 63em) {

  fieldset .progressBarContainer {
    padding: 0 2.5em;
  }

  .reviewAnnotations ul {
    padding: 1.5em 2.5em 1.5em 2.5em;
  }

  .save {
    margin: 0 2.5em 2.5em;
  }
}

.rangeSlider {
  position: relative;
  margin-top: 1em;
  padding: 1em;
  text-align: center;

  .rangeSliderValue {
    position: relative;
    padding: .5em;
    background-color: $gray-2;
    display: inline-block;
    margin-bottom: .5em;

    &:after {
      content: '';
      position: absolute;
      width: 0;
      height: 0;
      border-left: 8px solid transparent;
      border-right: 8px solid transparent;
      border-top: 8px solid $gray-2;
      left: 0;
      right: 0;
      margin: auto;
      bottom: -8px;
    }
  }

  input[type=range] {
    -webkit-appearance: none;
    margin: 18px 0;
    width: 100%;
  }

  input[type=range]:focus {
    outline: none;
  }

  input[type=range]::-webkit-slider-runnable-track {
    very-rounded();
    height: .5em;
    width: 100%;
    cursor: pointer;
    animate: 0.2s;
    background: $gray-2;
  }

  input[type=range]::-webkit-slider-thumb {
    height: 2em;
    width: 1em;
    background: $aqua;
    cursor: pointer;
    -webkit-appearance: none;
    margin-top: -.75em;
  }

  .nextButton {
    button();
    background: $aqua;
    border: 0;
    width: 100%;
    color: white;
    font-size: 1em;
    margin-top: 1em;

    &:hover {
      background: $aqua;
    }
  }
}
